{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "dist",
    "typeRoots": [ "./types", "./node_modules/@types"],
    "lib": ["es2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    
    "checkJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}